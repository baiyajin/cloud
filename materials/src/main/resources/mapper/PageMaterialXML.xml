    <select id="getMaterialsInfoByArea"  parameterType="java.util.Map" resultType="java.util.Map">
        select * from page_material_pice
        where  is_del = 0
        <if test="area !=null and area != ''">
            and city = #{area}
        </if>
        <if test="provinceArea !=null and provinceArea != ''">
            and area = #{provinceArea}
        </if>
        <if test="matPid !=null and matPid != ''">
           and mat_pid = #{matPid}
        </if>
        <if test="id !=null and id != ''">
            and mid = #{id}
        </if>
        <if test="level !=null and level != ''">
            and find_in_set(level,#{level})
        </if>

        <if test="startDate !=null and startDate != ''">
            <![CDATA[
            and  mdate >= #{startDate}
            ]]>
        </if>
        <if test="endDate !=null and endDate != ''">
            <![CDATA[
                and  mdate <= #{endDate}
                ]]>
        </if>
        <if test="type !=null and type != ''">
            and type = #{type}
        </if>

        order by mdate

    </select>




    <sql id="sqlString">
        select * from (
        select m.id as cid,m.name,m.pid,m.sort,m.level,
        ifnull(i.mid,'') as mid,
        ifnull(i.area,'') as area,
        ifnull(price,'') as price,
        ifnull(exponent,'') as exponent,
        ifnull(tongbi,'') as tongbi,
        ifnull(huanbi,'') as huanbi,
        ifnull(mdate,'') as asmdate,
        m.shot_by_calss
        from(
        select * from hlidx_category
        <where>
            <if test="pid !=null and pid != ''">
                and pid = #{pid}
            </if>
           <if test="level !=null and level != ''">
                and find_in_set(level,#{level})
            </if>
            <if test="id !=null and id != ''">
                and id = #{id}
            </if>
        </where>
        ) m
        left join
        (select * from page_material_pice
        <where>
              and is_del = 0
            <if test="area !=null and area != ''">
                and find_in_set(area,#{area})
            </if>
            <if test="startDate !=null and startDate != ''">
                and mdate >= #{startDate}
            </if>
            <if test="endDate !=null and endDate != ''">
                <![CDATA[
                and  mdate <= #{endDate}
                ]]>
            </if>
            <if test="type !=null and type != ''">
                and type = #{type}
            </if>
        </where>
        ) i
        on m.id = i.mid
        ) m2 where mid !=''
    </sql>



    <select id="findByTime" parameterType="com.baiyajin.entity.bean.MaterialVo" resultType="com.baiyajin.entity.bean.MaterialVo">
        SELECT
        DATE_FORMAT(a.createTime,'%Y.%m.%d') AS "time",
        a.price AS "price",
        a.tongbi AS "tb",
        a.huanbi as "hb",
        a.exponent as "zs",
        a.areaID as "areaId",
        b.`name` as "add"
        FROM page_material a
        LEFT JOIN page_area b ON b.id = a.areaID
        <where>
            a.statusID = 'qy'
            <if test="cateId !=null and cateId != ''">
                and FIND_IN_SET(#{cateId},a.materialClassID)
            </if>
            <if test="areaID !=null and areaID != ''">
                and FIND_IN_SET(#{areaID},b.path)
            </if>
            <if test="startTime !=null and endTime != null">
                AND a.createTime BETWEEN STR_TO_DATE(#{startTime},'%Y-%m') AND STR_TO_DATE(#{endTime},'%Y-%m')
            </if>
            <if test="season !=null and season != ''">
                AND QUARTER(a.createTime)= #{season}
            </if>
            <if test="year !=null and year != ''">
                AND year(a.createTime) = #{year}
            </if>
        </where>
        order by time
    </select>


    <select id="getMaterialCountByMap" parameterType="java.util.Map" resultType="com.baiyajin.entity.bean.MaterialCount">
      select  ANY_VALUE(id) as id, ANY_VALUE(mid) as mid, ANY_VALUE(area) as  area,sum(count) as count from materialcount
        <where>
          <if test="mid != null and mid != ''">
              and mid = #{mid}
          </if>
          <if test="area != null and area != ''">
              and area = #{area}
          </if>
      </where>
    </select>






